OPENQDA_GIT_URL=https://github.com/openqda/openqda.git
OPENQDA_GIT_REF=1.0.4
OPENQDA_APP_SUBDIR=web

# App & runtime
APP_ENV=local
# required for mail verification links in emails, e.g. for password resets and user creation
# if missing, will be created on docker launch (and replaced next launch invalidating all verification links)
APP_KEY=totalsecurekeythatshouldbereplacedwitharealsecurekeybeforeproductionuse
APP_URL=https://openqda.example.local
ASSET_URL=https://openqda.example.local
APP_PORT=8923
# Will be used in entrypoint.sh to monkeypatch "protected $proxies = '*'" in vendor/laravel/framework/src/Illuminate/Http/Middleware/TrustProxies.php
TRUSTED_PROXIES="*"
# If true will be used in entrypoint.sh to monkeypatch "use Illuminate\Support\Facades\URL;" (URL::forceScheme("https");) in web/app/Providers/AppServiceProvider.php
FORCE_HTTPS=true

APP_DEBUG=true
LOG_LEVEL=debug

# ALTCHA/CAPTCHA Configuration
ALTCHA_EXPIRES=300
ALTCHA_ALGORITHM=SHA-256
ALTCHA_ENABLE=true
ALTCHA_HMAC_KEY=some64characterhexstringthatshouldbereplacedwitharealsecurekeybeforeproductionuse

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mail.example.local
MAIL_PORT=1025
MAIL_USERNAME=openqda@example
MAIL_PASSWORD=securepw
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS=openqda@example.local
MAIL_FROM_NAME=OpenQDA

# Reverb WebSocket Keys
REVERB_APP_KEY=local-key
VITE_REVERB_APP_KEY=local-key

# Inner (server-side) transport: plain HTTP â€” TLS is terminated by the Apache reverse proxy
REVERB_APP_ID=local
REVERB_APP_SECRET=local-secret
REVERB_SCHEME=http
REVERB_SERVER_HOST=0.0.0.0
# Ports
REVERB_SERVER_PORT=8443
# front-facing Reverb-port (reverse proxy handles 443 to 8443) // if set to 443, als tls certificates need to be provided. Not tested.
REVERB_PORT=8443
# Frontend (browser-side): connects via WSS through the reverse proxy on port 443
VITE_REVERB_HOST=openqda.example.local
VITE_REVERB_PORT=443
VITE_REVERB_SCHEME=https


# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=openqda
DB_USERNAME=sail
DB_PASSWORD=password
MYSQL_ROOT_PASSWORD=password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
